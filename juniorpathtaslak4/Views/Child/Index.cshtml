@model IEnumerable<juniorpathtaslak4.Models.Child>

@{
    ViewData["Title"] = "Children";
}

<h1>Children</h1>

<p>
    <a href="/Child/Create" class="btn btn-primary">Add New Child</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var child in Model)
        {
            <tr>
                <td>@child.Name</td>
                <td>@child.DateOfBirth.ToShortDateString()</td>
                <td>@child.Age</td>
                <td>
                    <a href="/Child/Details/@child.Id" class="btn btn-info">Details</a>
                    <a href="/Child/Edit/@child.Id" class="btn btn-warning">Edit</a>
                    <a href="/Child/Delete/@child.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model juniorpathtaslak4.Models.Child

@{
    ViewData["Title"] = "Delete Child";
}

<h1>Delete Child</h1>

<h4>Are you sure you want to delete this?</h4>
<hr />
<div>
    <h4>Child</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
    </dl>
</div>
<div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Child" class="btn btn-secondary">Back to List</a>
    </form>
</div>
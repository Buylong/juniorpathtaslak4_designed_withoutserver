@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center" style="background-color: #ffebcd; padding: 2rem 1rem; border-radius: 0.3rem;">
    <img src="~/images/balloons.png" alt="Balloons" class="img-fluid" style="width: 500px; height: auto;">
    <h1 class="display-4" style="color: #ff6347;">Welcome to the Kindergarten Info System!</h1>
    <p class="lead" style="color: #4682b4;">This is a simple application to manage children and their daily activities in a kindergarten.</p>
    <hr class="my-4">
    <p style="color: #4682b4;">Use the navigation bar to access different sections of the system.</p>
    <a class="btn btn-primary btn-lg" href="/Child" role="button" style="border-radius: 20px;">Manage Children</a>
</div>

